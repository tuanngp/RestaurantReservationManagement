@model object

<div class="container-fluid">
    <div class="row mb-2">
        <div class="col-sm-6">
            <h1>Xóa @ViewData["Title"]</h1>
        </div>
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                <li class="breadcrumb-item"><a asp-action="Index">@ViewData["Title"]</a></li>
                <li class="breadcrumb-item active">Xóa</li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Bạn có chắc chắn muốn xóa đối tượng này?</h3>
                </div>
                <div class="card-body">
                    <partial name="Generic/_Details" model="Model" />
                </div>
                <div class="card-footer">
                    <form asp-action="Delete" method="post">
                        @{
                            var idProp = Model.GetType().GetProperties()
                            .FirstOrDefault(p => p.Name == "Id" || p.Name.EndsWith("Id"));
                            var idValue = idProp?.GetValue(Model);
                        }
                        <input type="hidden" name="Id" value="@idValue" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash"></i> Xác nhận xóa
                        </button>
                        <a asp-action="Index" class="btn btn-default">
                            <i class="fa fa-arrow-left"></i> Quay lại
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
